<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <!-- 뒤로가기 -->
        <ImageView
            android:id="@+id/person_back_btn"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/person_profile_image"
            android:layout_margin="7.5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:id="@+id/person_profile_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/person_imageview_content"
        android:src="@android:color/holo_orange_light"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="280dp"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical">

        <ImageView

            android:id="@+id/person_favorite_imageview"
            android:src="@drawable/ic_favorite_border"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <ImageView
            android:id="@+id/person_comment_imageview"
            android:src="@drawable/ic_chat_black"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/person_favoritecounter_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@android:color/black"
            android:text="좋아요 0개"/>


    </LinearLayout>

    <TextView

        android:id="@+id/person_explain_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/person_commentcounter_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="35dp"
        android:text="댓글 0개"/>

</LinearLayout>